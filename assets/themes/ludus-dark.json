  "tokenColors": [
    {
      "name": "Comment - Strategic notes",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#648f6f",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Keyword - Game rules",
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#81c995",
        "fontStyle": "bold"
      }
    },
    {
      "name": "String - Quest text",
      "scope": ["string", "string.quoted"],
      "settings": {
        "foreground": "#95c981"
      }
    },
    {
      "name": "Number - Game stats",
      "scope": ["constant.numeric"],
      "settings": {
        "foreground": "#5ff59f"
      }
    },
    {
      "name": "Function - Skill actions",
      "scope": ["entity.name.function", "support.function"],
      "settings": {
        "foreground": "#d4f5e3",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Class - Character types",
      "scope": ["entity.name.class", "entity.name.type"],
      "settings": {
        "foreground": "#b8e6c9",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Variable - Game state",
      "scope": ["variable", "support.variable"],
      "settings": {
        "foreground": "#6eb584"
      }
    },
    {
      "name": "Constant - Fixed rules",
      "scope": ["constant", "support.constant"],
      "settings": {
        "foreground": "#5ff59f"
      }
    },
    {
      "name": "Operator - Combat actions",
      "scope": ["keyword.operator"],
      "settings": {
        "foreground": "#5fa876"
      }
    },
    {
      "name": "Tag - Encounter markers",
      "scope": ["entity.name.tag"],
      "settings": {
        "foreground": "#81c995"
      }
    },
    {
      "name": "Attribute - Item properties",
      "scope": ["entity.other.attribute-name"],
      "settings": {
        "foreground": "#95c981"
      }
    },
    {
      "name": "Type - Tactical types",
      "scope": ["support.type", "entity.name.type"],
      "settings": {
        "foreground": "#81c9b8"
      }
    },
    {
      "name": "Import - Resource loading",
      "scope": ["keyword.control.import", "keyword.control.export"],
      "settings": {
        "foreground": "#81c995",
        "fontStyle": "italic"
      }
    }
  ]
}

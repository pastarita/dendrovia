{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV", "PORT", "LOG_LEVEL", "LOG_FORMAT"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "generated/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "@dendrovia/chronos#parse": {
      "outputs": ["generated/**/*.json"],
      "cache": true
    },
    "@dendrovia/imaginarium#distill": {
      "dependsOn": ["@dendrovia/chronos#parse"],
      "outputs": ["generated/**/*.{glsl,wgsl,json}"],
      "cache": true
    },
    "@dendrovia/operatus#manifest": {
      "dependsOn": ["@dendrovia/imaginarium#distill"],
      "outputs": ["../imaginarium/generated/operatus-manifest.json"],
      "cache": true
    },
    "@dendrovia/architectus#build": {
      "dependsOn": ["@dendrovia/imaginarium#distill", "@dendrovia/operatus#manifest"],
      "outputs": ["dist/**"]
    }
  }
}
